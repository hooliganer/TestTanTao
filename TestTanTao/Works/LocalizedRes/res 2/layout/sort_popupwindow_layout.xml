<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/popupmenu_width"
    android:layout_height="wrap_content"
    android:background="@drawable/popupwindow_background"
    >

    <RelativeLayout
        android:id="@+id/sort_title_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <TextView
            style="@style/list_primary_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tool_sort_by"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/margin_l"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sort_custom_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/popupwindow_menuitem">
        <TextView
            style="@style/list_primary_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tool_sort_custom"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/margin_l"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:id="@+id/sort_custom_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_l"
            android:src="@drawable/ic_check_black_24dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sort_currency_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/popupwindow_menuitem">
        <TextView
            style="@style/list_primary_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tool_sort_currency_tpye"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/margin_l"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:id="@+id/sort_currency_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_l"
            android:src="@drawable/ic_arrow_downward_black_24dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sort_value_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/popupwindow_menuitem">
        <TextView
            style="@style/list_primary_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tool_sort_value"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/margin_l"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:id="@+id/sort_value_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_l"
            android:src="@drawable/ic_check_black_24dp"/>
    </RelativeLayout>


</LinearLayout>