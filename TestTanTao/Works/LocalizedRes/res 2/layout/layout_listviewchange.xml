<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:id="@+id/relative_list"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_change"
        android:layout_width="738px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/M1"
        android:layout_marginTop="@dimen/M2"
        android:layout_toLeftOf="@+id/layout_list2"
        android:layout_marginBottom="@dimen/margin"
        style="@style/htcListItem"
        android:orientation="vertical">

        <TextView
            android:id="@+id/change_date"
            android:layout_width="738px"
            android:layout_height="match_parent"
            style="@style/list_primary_m"
            android:text="2018/12/25 12:30:03"/>
        <TextView
            android:id="@+id/sendReveive"
            android:layout_width="738px"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:layout_marginTop="@dimen/M5"
            android:layout_gravity="left"
            style="@style/list_secondary_m"
            android:text="Reveive from:adji...iw12212e1551"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_change2"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/M2"
        android:layout_toRightOf="@+id/layout_change"
        android:layout_marginLeft="@dimen/M5"
        android:layout_marginRight="@dimen/M1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/M5"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/change_rate"
                style="@style/button_primary_xs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/M5"
                android:layout_toLeftOf="@+id/changewallet_type"
                android:layout_centerVertical="true"
                android:text="+10.2"  />

            <TextView
                android:id="@+id/changewallet_type"
                style="@style/list_primary_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/M5"
                android:layout_alignParentRight="true"
                android:text="ETH" />


        </RelativeLayout>

        <TextView
            android:id="@+id/waitting"
            style="@style/list_secondary_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_gravity="right"
            android:text="@string/transaction_pending" />
    </LinearLayout>

</RelativeLayout>