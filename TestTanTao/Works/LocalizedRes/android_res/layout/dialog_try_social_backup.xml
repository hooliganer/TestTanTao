<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/ivSocialKeyRecovey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/M4"
        android:layout_gravity="center"
        app:srcCompat="@drawable/wallet_oobe_social_backup" />

    <TextView
        android:id="@+id/tv_try_social_key_recovery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/M1"
        android:layout_marginTop="@dimen/M4"
        android:layout_marginRight="@dimen/M1"
        android:layout_marginBottom="@dimen/M4"
        android:text="@string/db_try_social_key_recovery_msg"
        android:textSize="@dimen/info_primary_xs" />
</LinearLayout>